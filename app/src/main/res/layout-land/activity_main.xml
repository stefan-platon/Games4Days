<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.laborator1.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="439dp"
            android:layout_marginRight="439dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:contentDescription="@string/logo_image"/>

        <ImageView
            android:id="@+id/logoImageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@mipmap/ic_launcher"
            android:contentDescription="@string/logo_image"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/textview_border">

        <ImageView
            android:id="@+id/gameImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/game_image"
            android:onClick="insertItem"/>

        <TextView
            android:id="@+id/text_view_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="@string/additional_info"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:onClick="goToStorePage"/>

        <ImageView
            android:id="@+id/gameImageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/game_image"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
